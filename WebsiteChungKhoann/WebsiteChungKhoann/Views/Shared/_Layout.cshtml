                                <a id="newLink" href="/New/Index" class="nav-itemss nav-links">New</a>
                                <a id="postLink" href="/Post/Index" class="nav-itemss nav-links">Concept</a>
                                <a id="courseLink" href="/Course/Index" class="nav-itemss nav-links">Course</a>
