@model WebsiteChungKhoann.Models.Author

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .ip {
        width: 500px;
    }

    label {
        font-weight: bold;
    }
</style>
<p style="background-color: #C40C0C; color: white; text-align: center; padding: 10px">Sửa dữ liệu</p>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="display: flex; justify-content: center; margin: auto auto; margin-top: 60px;">
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_Author)

            <div class="form-group" style="display: flex">
                <label style="margin: 0px 30px">Name:</label>
                <div class="col-md-10 ip">
                    @Html.EditorFor(model => model.Name_Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name_Author, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group" style="display: flex">
                <label style="margin: 0px 20px">Address:</label>
                <div class="col-md-10 ip" style="display: flex">
                    @Html.EditorFor(model => model.Address_Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address_Author, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group" style="display: flex">
                <label style="margin: 0px 35px">Age:</label>
                <div class="col-md-10 ip">
                    @Html.EditorFor(model => model.Age_Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Age_Author, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group" style="display : flex; justify-content: center">
                <div class="col-md-10 ip" style="display: flex; justify-content: center; background-color: #C40C0C; color: white; width: 120px; border-radius: 10px">
                    <input style="color:white; outline: none; border: none;" onclick="confirmAndSubmit()" type="submit" value="Cập nhật" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
}
<script>
    function confirmAndSubmit() {
        alert("Bạn có chắc là muốn sửa dữ liệu ?");
    }
</script>
