@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebsiteChungKhoann.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        width: 98%;
        margin-left: 20px;
        margin-top: -15px;
    }

    thead {
        background-color: #C40C0C;
        color: white;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        padding: 8px;
        white-space: nowrap; /* Ngăn chữ xuống dòng */
        overflow: hidden; /* Ẩn chữ thừa */
        text-overflow: ellipsis; /* Thêm dấu ba chấm */
        max-width: 150px;
    }

    tr:hover {
        background-color: rgba(255, 127, 80, 0.4 );
    }
</style>
<style>
    /* Phân trang */
    .pagination-container {
        text-align: center;
        margin-top: 20px;
    }

        .pagination-container .pagination {
            display: inline-block;
            padding-left: 0;
            margin: 20px 0;
            border-radius: 4px;
        }

            .pagination-container .pagination li {
                display: inline;
            }

                .pagination-container .pagination li a {
                    position: relative;
                    float: left;
                    padding: 6px 12px;
                    line-height: 1.428571429;
                    text-decoration: none;
                    color: #C40C0C;
                    background-color: #fff;
                    border: 1px solid #ddd;
                    margin-left: -1px;
                }

                .pagination-container .pagination li.active a {
                    background-color: #C40C0C;
                    color: #fff;
                }

                .pagination-container .pagination li a:hover {
                    z-index: 3;
                    color: #fff;
                    background-color: #C40C0C;
                    border-color: #C40C0C;
                }

                .pagination-container .pagination li:first-child a {
                    margin-left: 0;
                    border-top-left-radius: 4px;
                    border-bottom-left-radius: 4px;
                }

                .pagination-container .pagination li:last-child a {
                    border-top-right-radius: 4px;
                    border-bottom-right-radius: 4px;
                }

                .pagination-container .pagination li a:focus {
                    outline: none;
                }
</style>
<p class="text-center" style="padding: 10px; color: white; background-color: #C40C0C;">Quản Lý Đơn Hàng</p>
<p>
    <a href="@Url.Action("Create")"><i class="fa-solid fa-square-plus" style="color: #C40C0C; font-size: 34px; margin-top: 10px; margin-left: 20px; cursor: pointer "></i></a>
</p>
<table class="table">
    <thead>

        <tr>
            <th>
                Name
            </th>
            <th>
                Phương thức
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Product_Name
            </th>
            <th>
                Giao hàng
            </th>
            <th>
                Date
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th style="display: none">
                Name_Pro
            </th>
            <th style="display: none">
                FullName
            </th>
            <th style="display: none">
                Address
            </th>
            <th style="display: none">
                Phone
            </th>
            <th style="display: none">
                Total
            </th>
            <th>
                Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pay.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayStatus.Pay_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Create_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td style="display: none">
                    @Html.DisplayFor(modelItem => item.Name_Pro)
                </td>
                <td style="display: none">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="display: none">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td style="display: none">
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td style="display: none">
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.code)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id = item.Id_Order })"><i class="fa-solid fa-pencil text-warning" style="font-size: 14px; margin: 0px 10px; "></i></a>

                    <a href="@Url.Action("Xoa",new { id = item.Id_Order })" onclick="Notifical()"><i class="fa-solid fa-trash-can text-danger" style="font-size: 14px"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
<script>
    function Notifical() {
        alert("Bạn có chắc muốn xóa đơn hàng này ?");
    }
</script>