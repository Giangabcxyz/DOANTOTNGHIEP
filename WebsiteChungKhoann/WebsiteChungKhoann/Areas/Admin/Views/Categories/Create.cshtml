@model WebsiteChungKhoann.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    .ip {
        width: 500px;
    }

    label {
        font-weight: bold;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p class="text-center" style="font-size: 18px; font-weight: 500; margin: 0; background-color: #C40C0C; padding: 15px; color: white">Thêm Danh Mục</p>
    <div class="form-horizontal" style="margin-top: 60px; display: flex; justify-content: center ">
        <div>
            <div class="form-group" style="display: flex">
                <label style="display: flex; margin: 0px 20px;">Name :</label>
                <div class="col-md-10 ip">
                    @Html.EditorFor(model => model.Name_Category, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name_Category, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group" style="display : flex; justify-content: center">
                <div class="col-md-10 ip" style="display: flex; justify-content: center; background-color: #C40C0C; color: white; width: 120px; border-radius: 10px">
                    <input style="color:white; outline: none; border: none;" onclick="confirmAndSubmit();" type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
<script>
    function confirmAndSubmit() {
        alert("Thêm thành công");
    }
</script>

@if (ViewBag.error != null)
{
    <div class="alert alert-danger" role="alert">@ViewBag.error</div>
}    