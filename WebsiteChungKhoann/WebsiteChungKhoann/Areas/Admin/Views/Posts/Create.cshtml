@model WebsiteChungKhoann.Models.Post

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .ip {
        width: 500px;
    }

    label {
        font-weight: bold;
    }
</style>

@using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <p class="text-center" style="font-size: 18px; font-weight: 500; margin: 0; background-color: #C40C0C; padding: 15px; color: white">Tạo bài viết</p>
    <div class="form-horizontal" style="display: flex; justify-content: center; margin-top: 60px">
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="display: flex">
                <label style="margin: 0px 30px">Name :</label>
                <div class="col-md-10 ip">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group" style="display: flex">
                <label style="margin: 0px 10px">Description :</label>
                <div class="col-md-10 ip">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group" style="display: flex">
                <label style="margin: 0px 40px">Img :</label>
                <div class="col-md-10 ip">
                    <input type="file" name="imgFile" id="imgFile" class="form-control" />
                    <img id="imgPreview" src="#" alt="Preview" style="max-width: 200px;margin-top: 50px;  max-height: 200px; display: none;" />
                    @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
                </div>
            </div>



            <br />
            <div class="form-group" style="display : flex; justify-content: center">
                <div class="col-md-10 ip" style="display: flex; justify-content: center; background-color: #C40C0C; color: white; width: 120px; border-radius: 10px">
                    <input style="color:white; outline: none; border: none;" onclick="confirmAndSubmit()" type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
}


<script>
    document.getElementById('imgFile').onchange = function (event) {
        var reader = new FileReader();

        reader.onload = function () {
            var imgPreview = document.getElementById('imgPreview');
            imgPreview.src = reader.result;
            imgPreview.style.display = 'block';
        };

        reader.readAsDataURL(this.files[0]);
    };
</script>

