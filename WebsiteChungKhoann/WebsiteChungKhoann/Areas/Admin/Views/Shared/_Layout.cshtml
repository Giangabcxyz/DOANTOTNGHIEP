    <script src="~/Assets/Admin/js/datatables-simple-demo.js"></script>
    <script>
        $(document).ready(function () {
            // Lấy đường dẫn hiện tại
            var currentUrl = window.location.pathname;

            // Tìm thẻ a có href tương ứng với đường dẫn hiện tại và thêm lớp active
            $('.nav-link').filter(function () {
                return $(this).attr('href') === currentUrl;
            }).addClass('active');

            // Sự kiện khi click vào thẻ a
            $('.nav-link').click(function (e) {
                // Loại bỏ lớp active từ tất cả các thẻ a trong .nav
                $('.nav-link').removeClass('active');
                // Thêm lớp active vào thẻ a đã được click
                $(this).addClass('active');
                // Lưu trạng thái vào Local Storage
                localStorage.setItem('activeNavLink', $(this).attr('href'));
            });

            // Khôi phục trạng thái đã chọn khi load lại trang
            var activeNavLink = localStorage.getItem('activeNavLink');
            if (activeNavLink) {
                $('.nav-link[href="' + activeNavLink + '"]').addClass('active');
            }
        });


    </script>
